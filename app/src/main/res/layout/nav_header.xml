<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:visibility="gone"
        android:id="@+id/id_foto"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ImageView>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/nombre_user_nav"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:text="Hugo Enrique Tovar Romero"
        app:layout_constraintTop_toBottomOf="@id/id_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/tipo_usuario_nav"
        android:paddingLeft="20dp"
        android:text="Administrador"
        app:layout_constraintTop_toBottomOf="@id/nombre_user_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>